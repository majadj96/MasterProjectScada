<UserControl x:Class="UserInterface.View.MeshView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserInterface.View"
             xmlns:viewModel="clr-namespace:UserInterface.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="800">

    <UserControl.Resources>
        <Style x:Key="MyButtonStyle" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" 
                            BorderThickness="0"
                            Padding="4,2" 
                            BorderBrush="DarkGray" 
                            CornerRadius="3" 
                            Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FFF7CE12" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="0,0,0,0" Background="#FF5E5E5E">
        <Canvas Margin="300,0,0,0" Background="#FF5E5E5E">

            <Line
            X1="0" Y1="10"
            X2="190" Y2="10"
            Stroke="{Binding LineStart}"
            StrokeThickness="2" Grid.Row="1" Canvas.Left="15" Canvas.Top="1"/>
            <Line
            X1="0" Y1="0"
            X2="0" Y2="20"
            Stroke="{Binding LineFirst}"
            StrokeThickness="2" Grid.Row="1" Canvas.Left="110" Canvas.Top="11" />

            <Line
            X1="0" Y1="0"
            X2="0" Y2="20"
            Stroke="{Binding LineSecond}"
            StrokeThickness="2" Grid.Row="1" Canvas.Left="110" Canvas.Top="81" />
            <Ellipse
                Fill="Black"
                Height="6"
                Width="6"
                StrokeThickness="2"
                Stroke="Black" Canvas.Left="107" Canvas.Top="99"/>
            <Line
            X1="0" Y1="0"
            X2="0" Y2="20"
            Name="line_2"
            Stroke="{Binding LineThird}"
            StrokeThickness="2" Grid.Row="1" Canvas.Left="110" Canvas.Top="163" />
            <Line
            X1="0" Y1="0"
            X2="0" Y2="25"
                Stroke="{Binding LineFourth}"
            Name="line_3"
            StrokeThickness="2" Grid.Row="1" Canvas.Left="110" Canvas.Top="313" />
            <Ellipse
                Fill="Black"
                Height="6"
                Width="6"
                StrokeThickness="2"
                Stroke="Black" Canvas.Left="107" Canvas.Top="181"/>
            <Ellipse
                Fill="Black"
                Height="6"
                Width="6"
                StrokeThickness="2"
                Stroke="Black" Canvas.Left="107" Canvas.Top="29"/>
            <Ellipse
                Fill="Black"
                Height="6"
                Width="6"
                StrokeThickness="2"
                Stroke="Black" Canvas.Left="107" Canvas.Top="307"/>
            <Ellipse
                Fill="Black"
                Height="6"
                Width="6"
                StrokeThickness="2"
                Stroke="Black" Canvas.Left="107" Canvas.Top="338"/>
            <Ellipse
                Fill="Black"
                Height="6"
                Width="6"
                StrokeThickness="2"
                Stroke="Black" Canvas.Left="107" Canvas.Top="76"/>
            <Line
                Stroke="{Binding LineUpDis1}"
                Name="Up_Disconector"
                X1="0" Y1="0"
                X2="0" Y2="10"
                StrokeThickness="2" Canvas.Left="110" Canvas.Top="35" Height="10" />
            <Line
                x:Name="Down_Disconector_Copy"
                X1="0" Y1="0"
                X2="0" Y2="10"
                Stroke="{Binding LineDownDis1}"
                StrokeThickness="2" Canvas.Left="110" Canvas.Top="66" Height="10" />
            <Line
                x:Name="Up_Breaker"
                X1="0" Y1="0"
                X2="0" Y2="10"
                Stroke="{Binding LineUpBreaker}"
                StrokeThickness="2" Canvas.Left="110" Canvas.Top="106" Height="10" />
            <Line
                x:Name="Down_Breaker"
                X1="0" Y1="0"
                X2="0" Y2="10"
                Stroke="{Binding LineDownBreaker}"
                StrokeThickness="2" Canvas.Left="110" Canvas.Top="147" Height="10" />
            <Ellipse
                Fill="Black"
                Height="6"
                Width="6"
                StrokeThickness="2"
                Stroke="Black" Canvas.Left="107" Canvas.Top="157"/>
            <Line
                x:Name="Up_Disconector_2"
                X1="0" Y1="0"
                X2="0" Y2="10"
                Stroke="{Binding LineUpDis2}"
                StrokeThickness="2" Canvas.Left="110" Canvas.Top="187" Height="10" />
            <Line
                x:Name="Down_Disconector_2"
                X1="0" Y1="0"
                X2="0" Y2="10"
                Stroke="{Binding LineDownDis2}"
                StrokeThickness="2" Canvas.Left="110" Canvas.Top="219" Height="10" />
            <Ellipse
                Fill="Black"
                Height="6"
                Width="6"
                StrokeThickness="2"
                Stroke="Black" Canvas.Left="107" Canvas.Top="228"/>
            <Line
                x:Name="Up_PT"
                X1="0" Y1="0"
                X2="0" Y2="10"
                Stroke="{Binding LineUpPT}"
                StrokeThickness="2" Canvas.Left="110" Canvas.Top="234" Height="10" />
            <Line
                x:Name="Down_PT"
                X1="0" Y1="0"
                X2="0" Y2="10"
                Stroke="{Binding LineDownPT}"
                StrokeThickness="2" Canvas.Left="110" Canvas.Top="297" Height="10" />
            <Line
                x:Name="Up_AM"
                X1="0" Y1="0"
                X2="0" Y2="10"
                Stroke="{Binding LineUpPump}"
                StrokeThickness="2" Canvas.Left="110" Canvas.Top="344" Height="10" />
            <Button Name="Disc_1" Content="" Canvas.Left="97" Margin="0" Canvas.Top="43" Width="25" Height="25" BorderBrush="{x:Null}" Style="{StaticResource MyButtonStyle}" Cursor="Pen">
                <Button.Background>
                    <ImageBrush ImageSource="{Binding Disconector1Image}"/>
                </Button.Background>
                <Button.InputBindings>
                    <MouseBinding Gesture="RightClick" Command="{Binding Commanding}" CommandParameter="Disconnector1"/>
                    <MouseBinding Gesture="LeftClick" Command="{Binding CommandDis1}" CommandParameter="1"/>
                </Button.InputBindings>
            </Button>
            <Button Name="Disc_2" Content="" Canvas.Left="97" Margin="0" Canvas.Top="194" Width="25" Height="25" BorderBrush="{x:Null}" Style="{StaticResource MyButtonStyle}" Cursor="Pen">
                <Button.Background>
                    <ImageBrush ImageSource="{Binding Disconector2Image}"/>
                </Button.Background>
                <Button.InputBindings>
                    <MouseBinding Gesture="RightClick" Command="{Binding Commanding}" CommandParameter="Disconnector2"/>
                    <MouseBinding Gesture="LeftClick" Command="{Binding CommandDis2}" CommandParameter="2"/>
                </Button.InputBindings>
            </Button>
            <Button x:Name="Breaker" Content="" Canvas.Left="93" Margin="0" Canvas.Top="113" Width="35" Height="35" BorderBrush="{x:Null}" Style="{StaticResource MyButtonStyle}" Cursor="Pen">
                <Button.Background>
                    <ImageBrush ImageSource="{Binding BreakerImage}"/>
                </Button.Background>
                <Button.InputBindings>
                    <MouseBinding Gesture="RightClick" Command="{Binding Commanding}" CommandParameter="Breaker"/>
                    <MouseBinding Gesture="LeftClick" Command="{Binding CommandBreaker}"/>
                </Button.InputBindings>
            </Button>
            <Button x:Name="PT" Canvas.Left="74" Margin="0" Canvas.Top="239" Width="71" Height="61" BorderBrush="{x:Null}" Style="{StaticResource MyButtonStyle}" Cursor="Pen" FontFamily="Segoe UI Semibold" Foreground="#00000000">
                <Button.Background>
                    <ImageBrush ImageSource="{Binding PTImage}"/>
                </Button.Background>
                <Button.InputBindings>
                    <MouseBinding Gesture="RightClick" Command="{Binding Commanding}" CommandParameter="PowerTransformer"/>
                    <MouseBinding Gesture="LeftClick" Command="{Binding CommandPT}"/>
                </Button.InputBindings>
            </Button>
            <Button x:Name="AM_1" Content="" Canvas.Left="96" Margin="0" Canvas.Top="354" Width="67" Height="87" BorderBrush="{x:Null}" Style="{StaticResource MyButtonStyle}">
                <Button.Background>
                    <ImageBrush ImageSource="{Binding PumpImage, Mode=TwoWay}"/>
                </Button.Background>
            </Button>
            <Canvas Visibility="{Binding Two_AM_Visible}" Height="111" Canvas.Left="1" Canvas.Top="349" Width="247" Background="#FF5E5E5E">
                <Button x:Name="AM_2_Multi" Content="" Canvas.Left="157" Margin="0" Width="67" Height="87" BorderBrush="{x:Null}" Canvas.Top="24" Style="{StaticResource MyButtonStyle}">
                    <Button.Background>
                        <ImageBrush ImageSource="{Binding Pump2Image, Mode=TwoWay}"/>
                    </Button.Background>
                    <Button.InputBindings>
                        <MouseBinding Gesture="RightClick" Command="{Binding Commanding}" CommandParameter="AsynchronousMachine2"/>
                    </Button.InputBindings>
                </Button>
                <Button x:Name="AM_1_Multi" Content="" Canvas.Left="38" Margin="0" Width="67" Height="89" BorderBrush="{x:Null}" Canvas.Top="24" Style="{StaticResource MyButtonStyle}">
                    <Button.Background>
                        <ImageBrush ImageSource="{Binding Pump1Image, Mode=TwoWay}"/>
                    </Button.Background>
                    <Button.InputBindings>
                        <MouseBinding Gesture="RightClick" Command="{Binding Commanding}" CommandParameter="AsynchronousMachine1"/>
                    </Button.InputBindings>
                </Button>
                <Rectangle Height="20" Canvas.Left="51" Stroke="{Binding LineUpFirstPump}" StrokeThickness="2" Canvas.Top="4" Width="2"/>
                <Rectangle Height="20" Canvas.Left="169" Stroke="{Binding LineUpSecondPump}" StrokeThickness="2" Canvas.Top="4" Width="2"/>
                <Rectangle Height="2" Canvas.Left="51" Stroke="{Binding LineUpMultiPump}" StrokeThickness="2" Width="120" Canvas.Top="-1"/>
                <Ellipse
                Fill="Black"
                Height="6"
                Width="6"
                StrokeThickness="2"
                Stroke="Black" Canvas.Left="49" Canvas.Top="-2"/>
                <Ellipse
                    Fill="Black"
                    Height="6"
                    Width="6"
                    StrokeThickness="2"
                    Stroke="Black" Canvas.Left="167" Canvas.Top="-2"/>
            </Canvas>
            <Ellipse
                Fill="Black"
                Height="6"
                Width="6"
                StrokeThickness="2"
                Stroke="Black" Canvas.Left="107" Canvas.Top="8"/>
        </Canvas>
    </Grid>
</UserControl>
