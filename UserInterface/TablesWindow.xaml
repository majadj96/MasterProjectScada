<Window x:Class="UserInterface.TablesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserInterface"
        xmlns:views="clr-namespace:UserInterface.View"
        xmlns:viewModel="clr-namespace:UserInterface.ViewModel"
        mc:Ignorable="d"
        Title="Table Window" Height="700" Width="800" Background="LightGray" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <local:TablesWindowViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:TableViewModel}">
            <views:TableView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:AlarmViewModel}">
            <views:AlarmView/>
        </DataTemplate>
    </Window.Resources>

    <Grid Background="#FF474747">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="600"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <ContentControl Content="{Binding CurrentTableViewModel}"/>
        </Grid>
    </Grid>
</Window>
