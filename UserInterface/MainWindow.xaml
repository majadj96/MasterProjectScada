                <Ellipse
                    Fill="Black"
                    Height="6"
                    Width="6"
                    StrokeThickness="2"
                    Stroke="Black" Canvas.Left="167" Canvas.Top="-2"/>
            </Canvas>
            <Ellipse
                Fill="Black"
                Height="6"
                Width="6"
                StrokeThickness="2"
                Stroke="Black" Canvas.Left="107" Canvas.Top="8"/>
        </Canvas>

        <Label Content="{Binding PubSub}" Grid.Column="2" Margin="10,111,10,0" Grid.Row="1" VerticalAlignment="Top" Height="10"/>
        <StatusBar Margin="10,11,10,0" Grid.Row="2" Grid.ColumnSpan="3">

            <StatusBarItem>
                <Label Content="{Binding TimeStampStatusBar}"   />
            </StatusBarItem>
            <Separator Grid.Column="1" />
            <StatusBarItem>
                <Label Content="{Binding ConnectedStatusBar}"  />
            </StatusBarItem>
            <Separator Grid.Column="1" />
            <StatusBarItem>
                <Label  Content="SCADA SISTEM"  />

            </StatusBarItem>
        </StatusBar>

        <Button  Content="Alarm Table"  Grid.Column="1" HorizontalAlignment="Left" Style="{StaticResource MyButtonStyle}" Cursor="Hand" Height="41" Margin="10,39,0,0" VerticalAlignment="Top" Width="116" Grid.RowSpan="2" FontFamily="Consolas" FontSize="16" Background="#FFFF6D6D" Foreground="White" BorderBrush="#FFC5C5C5"/>

        <ComboBox ItemsSource="{Binding ComboSubstations}"  SelectedItem="{Binding SelectedSubstation}" HorizontalAlignment="Left" Margin="224,48,0,0" VerticalAlignment="Top" Width="192" Height="22" Grid.RowSpan="2" FontFamily="Consolas" Foreground="White" Background="#FF5D5D5D" BorderBrush="#FF4D4D4D"/>
        <Label Content="Select Substation" HorizontalAlignment="Left" Margin="226,11,0,0" HorizontalContentAlignment="Center" VerticalAlignment="Top" Height="38" Width="184" RenderTransformOrigin="0.5,0.5" Foreground="#FFF5D856" FontFamily="Consolas" FontSize="18">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.266"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>

    </Grid>
</Window>
