<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
        <!-- For more information on Entity Framework configuration, visit http://go.microsoft.com/fwlink/?LinkID=237468 -->
        <section name="entityFramework"
          type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089"
          requirePermission="false"/>
    </configSections>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1"/>
    </startup>

  <system.serviceModel>
    <services>
      <service behaviorConfiguration="NetworkDynamicService.ServiceBehavior" name="BackEndProcessorService.BackEndPocessingModule">
        <endpoint address="" binding="netTcpBinding" contract="ScadaCommon.ServiceContract.IBackEndProessingData"/>
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:10050/IBackEndProessingData"/>
          </baseAddresses>
        </host>
      </service>
      
      <service behaviorConfiguration="NetworkDynamicService.ServiceBehavior" name="NetworkDynamicService.PointUpdater.StateUpdateService">
        <endpoint address="" binding="netTcpBinding" contract="ScadaCommon.ServiceContract.IStateUpdateService"/>
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:10005/IStateUpdateService"/>
          </baseAddresses>
        </host>
      </service>
      
      <service behaviorConfiguration="NetworkDynamicService.ServiceBehavior" name="NetworkDynamicService.PointOperateService">
        <endpoint address="" binding="netTcpBinding" contract="ScadaCommon.ServiceContract.IFieldCommunicationService"/>
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:10022/IFieldCommunicationService"/>
          </baseAddresses>
        </host>
      </service>
      
      <service behaviorConfiguration="NetworkDynamicService.ServiceBehavior" name="NetworkDynamicService.Transaction.ModelUpdateContract">
        <endpoint address="" binding="netTcpBinding" contract="TransactionManagerContracts.IModelUpdateContract"/>
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:10055/NDS"/>
          </baseAddresses>
        </host>
      </service>
    </services>

    
    <client>
      <endpoint address="net.tcp://localhost:10002/IFieldCommunicationService"
        binding="netTcpBinding" contract="ScadaCommon.ServiceContract.IFieldCommunicationService"
        name="FieldCommunicationServiceEndPoint" />
      <endpoint address="net.tcp://localhost:30003/IStateUpdateService"
        binding="netTcpBinding" contract="ScadaCommon.ServiceContract.IStateUpdateService"
        name="StateUpdateServiceEndPoint" />
      <endpoint address="net.tcp://localhost:20005/IPointUpdateService"
        binding="netTcpBinding" contract="ScadaCommon.ServiceContract.IPointUpdateService"
        name="UpdatePointEndPoint" />
      <endpoint address="http://localhost:55517/AlarmServiceOperations.svc"
        binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IAlarmServiceOperations"
        contract="AlarmServiceRef.IAlarmServiceOperations" name="BasicHttpBinding_IAlarmServiceOperations" />
      <endpoint address="http://localhost:55517/EventServiceOperations.svc"
        binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IEventServiceOperations"
        contract="EventServiceRef.IEventServiceOperations" name="BasicHttpBinding_IEventServiceOperations" />
    </client>

    
    <bindings>
      <basicHttpBinding>
        <binding name="BasicHttpBinding_IAlarmServiceOperations" />
        <binding name="BasicHttpBinding_IEventServiceOperations" />
      </basicHttpBinding>
      <netTcpBinding>
        <binding name="netTcpBindingNoSecurity" closeTimeout="00:30:00"
          openTimeout="00:30:00" receiveTimeout="10:30:00" sendTimeout="00:10:00"
          maxBufferSize="2147483647" maxReceivedMessageSize="2147483647">
          <readerQuotas maxStringContentLength="2147483647" maxArrayLength="2147483647" />
          <security mode="None">
            <transport clientCredentialType="None" protectionLevel="None" />
          </security>
        </binding>
      </netTcpBinding>
    </bindings>

    
    <behaviors>
      <serviceBehaviors>
        <behavior name="NetworkDynamicService.ServiceBehavior">
          <serviceMetadata httpGetEnabled="false"/>
          <serviceThrottling maxConcurrentCalls="1000" maxConcurrentSessions="1000" maxConcurrentInstances="1000"/>
          <serviceDebug includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    
  </system.serviceModel>
  
  <entityFramework>
    <defaultConnectionFactory type="System.Data.Entity.Infrastructure.SqlConnectionFactory, EntityFramework"/>
    <providers>
      <provider invariantName="System.Data.SqlClient" type="System.Data.Entity.SqlServer.SqlProviderServices, EntityFramework.SqlServer"/>
    </providers>
  </entityFramework>

  <connectionStrings>
    <add name="AlarmEventDB" providerName="System.Data.SqlClient" connectionString="Data Source=(LocalDB)\MSSQLLocalDB;AttachDbFilename=|DataDirectory|\AlarmEventDB.mdf;Integrated Security=True;"/>
  </connectionStrings>
</configuration>
